# Core service URLs
DATABASE_URL=postgres://csi:csi_password@postgres:5432/csi_db
REDIS_URL=redis://redis:6379

# Ports
API_PORT=3000
WS_PORT=3001
FRONTEND_PORT=3002
POSTGRES_PORT=5432
REDIS_PORT=6379
PGADMIN_PORT=5050

# Supabase (auth only)
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_JWT_SECRET=your_supabase_jwt_secret
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key # backend-only, do NOT expose

# Frontend exposure (for dev stub)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Ninja API keys (comma-separated)
NINJA_KEYS=key1,key2,key3
NINJA_RATE_LIMIT=35
NINJA_INTERVAL=30000

# Other config
BLOOM_KEY=emails_bloom
UPLOAD_DIR=/usr/src/app/uploads
EXPORT_DIR=/usr/src/app/exports
LOG_LEVEL=info

# pgAdmin (optional)
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin